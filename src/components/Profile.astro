---
import ContactInfo from "./ContactInfo.astro";
import { basics } from "@cv";
const { summary, skills, label, location } = basics;
const { city, region } = location;
---

<section class="profile">
  <h2 class="profile__title">
    {label}
    <span aria-hidden="true">/</span>
    {city}, {region}
  </h2>
  <p class="profile__summary">{summary}</p>
  <p class="profile__skills">Current stack: {skills}</p>
  <ContactInfo />
</section>

<style>
  .profile {
    max-width: 70ch;
  }

  @media screen {
    .profile {
      position: sticky;
      top: 0;
      padding-top: calc(var(--header-height) + (1.5 * var(--border-radius)));
      padding-bottom: 4em;
    }
  }

  .profile__title {
    -webkit-font-smoothing: antialiased;
    margin-block: 0 0.5em;
  }

  .profile__summary {
    font-size: 1.2rem;
  }
</style>
