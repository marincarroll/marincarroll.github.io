---
const { title, class: className } = Astro.props;
---

<section class:list={["resume__section", className]}>
  {title && <h3 class="resume__section-title">{title}</h3>}
  <slot />
</section>
<style>
  .resume__section {
    margin-inline: auto;
    margin-block-start: 2rem;
    width: 100%;
  }
</style>
